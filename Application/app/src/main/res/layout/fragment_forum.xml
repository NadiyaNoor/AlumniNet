<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_forum"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="This is the first forum"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_forum2"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="This is the second forum"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_forum3"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="This is the third forum"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_forum4"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="This is the fourth forum"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>